<body id="bod">
{% block body %}{% endblock %}
<!-- Top menu -->

<nav class="navbar navbar-inverse navbar-fixed-top navbar-no-bg" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#top-navbar-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="index.html">Dashboard</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="top-navbar-1">
            <ul class="nav navbar-nav navbar-right">
                <li><a class="scroll-link" href="#menu">Menu</a></li>
                <li><a class="scroll-link" href="#graphique">Graphique</a></li>
                <li><a class="scroll-link" href="#alertes">Alertes</a></li>
            </ul>
        </div>
    </div>
</nav>


<!-- Top content -->
<div class="top-content menu-container section-container">
    <div class="container">

        <div class="row">
            <div class="col-sm-6 r-form-1-box wow fadeInLeft">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Étudiants avec un taux supérieur à 6% d'absences</a>
                        </h4>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse in">
                        <div class="panel-body">
                            {% for value in absences %}
                                <p style="color: black">{{ value }}</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-sm-7 text wow fadeInUp">
                <h1 style="color: white">Tableau de bord</h1>
                <div class="description">
                    <p class="medium-paragraph">
                         <br>
                    </p>
                </div>
                <div class="top-buttons">
                    <a class="btn btn-warning" href="/">Retour au menu <i class="fa fa-angle-right"></i> </a>
                </div>
            </div>

        </div>
    </div>
</div>


<!-- Features -->
<div class="graphique-container section-container-gray-bg">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 features section-description wow fadeIn">
                <h2>Les taux d'absences par mois</h2>
                <div class="divider-1">
                    <div class="line"></div>
                </div>

            </div>
        </div>
        <div class="row">
            <script type="text/javascript">
                {{ chart(linechart) }}
            </script>
            <div id="linechart" style="min-width: 400px; height: 400px; margin: 0 auto"></div>

        </div>

    </div>
</div>


{#<!-- More features -->#}
<div class="alertes-container section-container">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 more-features section-description wow fadeIn">
                <h2>Alertes</h2>
            </div>
        </div>
        <div class="row">
            {{ roomHtml|raw }}

            {{ groupeHtml|raw }}

            {{ momentHtml|raw }}
        </div>
    </div>
</div>d




